datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Rating {
  author    String?
  comment   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  score     Int?
  updatedAt DateTime @updatedAt
}

model Recipe {
  category    String?
  createdAt   DateTime @default(now())
  id          String   @id @default(cuid())
  image       Json?
  ingredients String?
  name        String?
  steps       String?
  updatedAt   DateTime @updatedAt
}

model UserProfile {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Comment {
  author    String?
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model User {
  createdAt    DateTime      @default(now())
  email        String?       @unique
  firstName    String?
  id           String        @id @default(cuid())
  lastName     String?
  password     String
  roles        Json
  updatedAt    DateTime      @updatedAt
  userProfiles UserProfile[]
  username     String        @unique
}
